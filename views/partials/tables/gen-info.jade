- if (typeof(elem_id) == "undefined")
	- var elem_id = "";
- var cssclass = "table";
- if(typeof(condensed) != "undefined" && condensed == true)
	- cssclass += " table-condensed";
- if(typeof(stripe) == "undefined" || stripe == true)
	- cssclass += " table-striped";
- if(typeof(border) != "undefined" && border == true)
	- cssclass += " table-bordered";
table(id="#{elem_id}", class="#{cssclass}")
	tr
		th(style="width: 200px;") Serial Number
		td #{inv_item.serial_no}
	tr
		th Categories
		td #{inv_item.categories}
	tr
		th Item or Device Type
		td #{inv_item.type}
	tr
		th Make
		td #{inv_item.make}
	tr
		th Model
		td #{inv_item.model}
	tr
		th Model No.
		td #{inv_item.model_no}
	tr
		th Estimated Value 
		td #{inv_item.estimated_value}
	tr
		th Berico Asset Tag
		td #{inv_item.asset_tag}