- if (typeof(elem_id) == "undefined")
	- var elem_id = "";
- if (typeof(id) == "undefined")
	- var id = "";
- if (typeof(value) == "undefined")
	- var value = "";
label.control-label #{label}   
div.controls
	- if (typeof(disabled) != "undefined" && disabled == true)
		input(id="#{elem_id}", type="text", name="#{id}", value="#{value}", disabled="true")
	- else
		input(id="#{elem_id}", type="text", name="#{id}", value="#{value}")
	- if (typeof(help) != "undefined")
		p.help-block.form-comment.w420px #{help}
