html(lang="en")
  head
    title Inventory Control
    link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap-responsive.css')
    link(rel='stylesheet', href='/stylesheets/custom-theme/jquery-ui-1.8.16.custom.css')
    link(rel='stylesheet', href='/stylesheets/enhanced.css')
    link(rel='stylesheet', href='/stylesheets/ui.daterangepicker.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='shortcut icon', type='image/x-icon', href='/favicon.ico')
    script(type='text/javascript', src='/javascripts/jquery-1.7.2.min.js')
    script(type='text/javascript', src='/javascripts/jquery-ui-1.8.16.custom.min.js')
    script(type='text/javascript', src='/javascripts/underscore-min.js')
    script(type='text/javascript', src='/javascripts/taffy-min.js')
    script(type='text/javascript', src='/javascripts/handlebars.js')
    script(type='text/javascript', src='/javascripts/bootstrap.js')
    script(type='text/javascript', src='/javascripts/jquery.livequery.js')
    script(type='text/javascript', src='/javascripts/date.js')
    script(type='text/javascript', src='/javascripts/enhance.min.js')
    script(type='text/javascript', src='/javascripts/fileinput.jquery.js')
    script(type='text/javascript', src='/javascripts/daterangepicker.jQuery.js')
    script(type='text/javascript', src='/javascripts/custom.js')
  body
    div.container-fluid
      !=partial('partials/header', {})
      - if (typeof(mobile) == 'undefined')
          mobile = false
      case mobile
        when false
          div.row-fluid
            div.span3.left_menu
              !=partial('partials/menu', {})
            div.span8.offset1
              != body
        when true
          div.row-fluid
            div.span12
              !=partial('partials/menu_mobile', {})
          div.row-fluid  
            != body
      div.row-fluid 
        !=partial('partials/footer', {})